<%- include("partials/header.ejs") -%>
    <div class="box" id="heading">
        <h1><%= date %></h1>
    </div>

    <div class="box">  
        <% for(var i =0; i < toDoItems.length; i++){ %>
            <div class="item">
                <input name="checkbox" value="<%= toDoItems[i].id %>" type="checkbox" onchange="this.form.submit()">
                <p> name: <%= toDoItems[i].nameUser %> number: <%= toDoItems[i].number %></p>
            </div>
        
        <% } %>
        <form action="/in" class="class" method="POST">
            <input type="text" name="Fname" placeholder="First name" autocomplete="off">
            <input type="text" name="Pnumber" placeholder="Phone number" autocomplete="off">
            <br>
            <button type="submit">+</button>
        </form>
    </div>
<%- include("partials/footer.ejs")-%>